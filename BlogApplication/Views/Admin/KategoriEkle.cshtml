
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<h2>KategoriEkle</h2>

<form action="/Admin/KategoriAdd" method="post">
    <table>
        <tr>
            <td>Kategori Adı</td>
            <td><input type="text" name="CategoryName" /></td>
        </tr>
        <tr>
            <td>Kategori Link</td>
            <td><input type="text" name="CategoryLink" /></td>
        </tr>
        <tr>
            <td>Üst Kategori</td>
            <td>
                <select name="TopCategory">
                    <option value="0">Ana Kategori</option>
                    @foreach (var item in ViewBag.categorylist)
                    {
                        <option value="@item.Id">@item.CategoryName</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Ekle" /></td>
        </tr>
    </table>
</form>